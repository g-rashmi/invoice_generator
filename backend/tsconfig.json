{
  "compilerOptions": {
    "target": "ES2020",
    "module": "CommonJS",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "outDir": "./dist",
    "rootDir": "./src",
    "baseUrl": "./",
    "paths": {
      "*": ["node_modules/*"]
    }
  },
  "jsx": "react" ,
  "include": ["src/**/*.tsx","src/*.tsx", "src/models/user.ts", "src/models/product.ts", "src/models/Invoice.ts", "src/routes/routee.ts", "src/index.ts"],
  "exclude": ["node_modules", "dist"]
}
